{% extends 'base.html.twig' %}

{% block title %}Détails de la Commande{% endblock %}

{% block body %}
    {% include 'home/_navbar.html.twig' %}

    <header class="text-center mb-4">
        <h1 class="fs-2">Détails de votre Commande</h1>
    </header>

    <main class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
        <article class="col-md-6">
            <div class="card p-4">
                <h2 class="text-center fs-4 mb-3">Voici les détails de votre commande :</h2>

                <div class="mb-3">
                    <strong>Nom :</strong> {{ user.firstName }} {{ user.userName }}
                </div>
                <div class="mb-3">
                    <strong>Email :</strong> {{ user.email }}
                </div>
                <div class="mb-3">
                    <strong>Nombre de billets :</strong> {{ totalBillets }}
                </div>
                <div class="mb-3">
                    <strong>Prix total :</strong> {{ montantTotal }}€
                </div>

                <form action="{{ path('payment_mock') }}" method="POST">
                    <!-- Champ caché pour le montant total -->
                   {# <input type="number" name="tarif" id="tarif" value="{{ montantTotal }}" min="0.01" step="0.01" required> #}
                    
                    <!-- Bouton de soumission (Payer) -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-success fs-5">Procéder au Paiement</button>
                    </div>
                </form>
            </div>
        </article>
    </main>

    {% include "home/_footer.html.twig" %}
{% endblock %}