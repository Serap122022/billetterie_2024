{% extends 'base.html.twig' %}

{% block title %}Détails de l'employé{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Détails de l'employé</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ employe.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ employe.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Prénom</th>
                    <td>{{ employe.prenom }}</td>
                </tr>
                <tr>
                    <th scope="row">Email</th>
                    <td>{{ employe.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Mot de passe (hashé)</th>
                    {# <td><code>{{ employe.password }}</code></td> #}
                      <td><code>********</code></td>
                </tr>
                <tr>
                    <th scope="row">Date de création</th>
                    <td>{{ employe.createdAt ? employe.createdAt|date('d/m/Y H:i') : 'Non définie' }}</td>
                </tr>
                <tr>
                    <th scope="row">Statut</th>
                    <td>
                        {% if employe.isActive %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-danger">Inactif</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th scope="row">Rôle</th>
                    <td>{{ employe.roles ? employe.roles|join(', ') : 'Non défini' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_admin_employes_index') }}" class="btn btn-secondary">
            ← Retour à la liste
        </a>

        <div>
            <a href="{{ path('app_admin_employes_edit', {'id': employe.id}) }}" class="btn btn-primary me-2">
                 Modifier
            </a>

            {{ include('_admin/gestion_employes/_delete_form.html.twig', { 'button_class': 'btn btn-danger' }) }}
        </div>
    </div>
</div>
{% endblock %}
